<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SettingsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSecondaryVariant"
    android:paddingBottom="@dimen/big_padding_1"
    android:theme="@style/Theme.PlaylistMaker">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_toolbar"
        app:titleTextAppearance="@style/SettingsToolbar.Title"
        style="@style/SettingsToolbar" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/theme_switcher"
        android:text="@string/dark_theme"
        android:thumbTintMode="screen"
        style="@style/Switch" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_share"
        android:text="@string/share_app"
        android:drawableEnd="@drawable/ic_share"
        style="@style/TextView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_support"
        android:text="@string/write_to_support"
        android:drawableEnd="@drawable/ic_support"
        style="@style/TextView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_terms"
        android:text="@string/terms_of_use"
        android:drawableEnd="@drawable/ic_arrow_forward"
        style="@style/TextView" />

</LinearLayout>