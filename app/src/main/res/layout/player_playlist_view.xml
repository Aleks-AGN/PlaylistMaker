<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/small_padding"
    android:paddingHorizontal="@dimen/medium_padding_1">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/track_image_edge"
        android:layout_height="@dimen/track_image_edge"
        android:src="@drawable/ic_track_placeholder"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/TrackName"
            tools:text="@string/playlist_title" />

        <TextView
            android:id="@+id/count"
            style="@style/TrackDescription"
            tools:text="@string/track_Ñount" />

    </LinearLayout>

</LinearLayout>