<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.library.PlaylistsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSecondaryVariant"
    android:paddingStart="@dimen/medium_padding_1"
    android:paddingEnd="@dimen/medium_padding_1"
    android:paddingBottom="@dimen/big_padding_1">

    <Button
        android:id="@+id/btn_new_playlist"
        android:layout_marginTop="@dimen/big_margin_1"
        android:text="@string/btn_new_playlist"
        android:layout_gravity="center|top"
        style="@style/NewPlaylistButton" />

    <LinearLayout
        android:id="@+id/placeholder_nothing_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/media_margin_1"
        android:gravity="center">

        <ImageView style="@style/EmptySearchIcon" />

        <TextView
            android:text="@string/empty_playlists"
            style="@style/SearchText" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlists_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/medium_margin"
    />

</LinearLayout>