<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.library.FavoritesFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSecondaryVariant"
    android:paddingBottom="@dimen/big_padding_1">

    <LinearLayout
        android:id="@+id/placeholder_nothing_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/media_margin_2"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView style="@style/EmptySearchIcon" />

        <TextView
            android:text="@string/empty_media_library"
            style="@style/SearchText" />
    </LinearLayout>

</LinearLayout>