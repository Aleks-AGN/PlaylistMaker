<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="title">@string/title</item>
        <item name="titleTextColor">@color/yp_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="MainToolbar.Title">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/medium_padding_2</item>
        <item name="android:layout_marginVertical">@dimen/small_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/small_padding</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="cornerRadius">@dimen/btn_radius</item>
    </style>

    <style name="SettingsToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">44dp</item>
        <item name="title">@string/settings</item>
        <item name="titleTextColor">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_black</item>
    </style>

    <style name="SettingsToolbar.Title">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/big_padding_1</item>
        <item name="android:paddingHorizontal">@dimen/medium_padding_2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
    </style>

    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/big_padding_1</item>
        <item name="android:paddingHorizontal">@dimen/medium_padding_2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableTint">@color/yp_text_gray</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
    </style>

    <style name="SearchToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="title">@string/search</item>
        <item name="titleTextColor">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_black</item>
    </style>

    <style name="SearchToolbar.Title">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="SearchField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/small_padding</item>
        <item name="android:paddingHorizontal">@dimen/medium_padding_1</item>
        <item name="android:maxLength">80</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:background">@drawable/search_field_background_gray</item>
        <item name="android:drawableTint">@color/yp_text_gray</item>
        <item name="android:drawableStart">@drawable/ic_search_small</item>
        <item name="android:drawablePadding">@dimen/small_padding</item>
    </style>

    <style name="ClearButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:src">@drawable/ic_clear_gray</item>
    </style>

    <style name="TrackName" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TrackDescription" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_text_gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/desc_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ImageDot">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="tint">@color/yp_text_gray</item>
    </style>

    <style name="GoOverButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="tint">@color/yp_text_gray</item>
    </style>

    <style name="EmptySearchIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_empty_search_light</item>
    </style>

    <style name="EmptySearchText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/big_padding_2</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/search_text_size</item>
    </style>

    <style name="NetErrorIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_net_error_light</item>
    </style>

    <style name="NetErrorText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/big_padding_2</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/search_text_size</item>
    </style>

    <style name="UpdateButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/big_margin</item>
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/upd_btn_text_size</item>
        <item name="cornerRadius">@dimen/upd_btn_radius</item>
    </style>

</resources>